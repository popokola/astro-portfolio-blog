---
import { PiInstagramLogo, PiLinkedinLogo, PiMarkdownLogo, PiReadCvLogo} from 'react-icons/pi'
const today = new Date();
---

<footer class="pb-6 md:pb-12 sticky top-[100vh] text-center pt-12">
	<ul class="flex justify-center sm:pl-1 md:px-6 mx-auto max-w-3xl">
		<li>
			<a
				class="hover:bg-gray-200 dark:hover:bg-gray-700 focus:outline-none focus:ring-2 focus:ring-gray-700 dark:focus:ring-gray-200 rounded-lg text-sm p-2.5 inline-flex items-center"
				aria-label="Linkedin"
				href="/CV"
			>
				<PiReadCvLogo className='w-4 h-4 md:w-5 md:h-5'/>	
			</a>
		</li>
		<li>
			<a
				class="hover:bg-gray-200 dark:hover:bg-gray-700 focus:outline-none focus:ring-2 focus:ring-gray-700 dark:focus:ring-gray-200 rounded-lg text-sm p-2.5 inline-flex items-center"
				aria-label="Twitter"
				href="/blog"
			>
				<PiMarkdownLogo className='w-4 h-4 md:w-5 md:h-5'/>		
			</a>
		</li>
		<li>
			<a
				class="hover:bg-gray-200 dark:hover:bg-gray-700 focus:outline-none focus:ring-2 focus:ring-gray-700 dark:focus:ring-gray-200 rounded-lg text-sm p-2.5 inline-flex items-center"
				aria-label="Instagram"
				href="#"
			>
				<PiInstagramLogo className='w-4 h-4 md:w-5 md:h-5'/>	
			</a>
		</li>
		<li>
			<a
				class="hover:bg-gray-200 dark:hover:bg-gray-700 focus:outline-none focus:ring-2 focus:ring-gray-700 dark:focus:ring-gray-200 rounded-lg text-sm p-2.5 inline-flex items-center"
				aria-label="Linkedin"
				href="https://www.linkedin.com/in/charles-parameswaralingam"
			>
				<PiLinkedinLogo className='w-4 h-4 md:w-5 md:h-5'/>	
			</a>
		</li>
		
	</ul>
	<span class="block text-sm tracking-tight md:text-base">
		&copy; {today.getFullYear()} <a href="/" >Charles Parameswaralingam</a>. All rights reserved.
	</span>
</footer>
